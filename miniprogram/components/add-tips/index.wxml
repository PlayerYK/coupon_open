<view class="box" wx:if="{{SHOW_TOP}}">
  <view class='arrow'></view>
  <view class='body' bindtap='showModal'>
    <text>{{text}}</text>
  </view>
</view>
<!-- modal -->
<view class='modal' wx:if="{{SHOW_MODAL}}">
  <view style='flex-direction: row;align-items:center;'>
    <text>第1步. 点击</text>
    <image src='./assets/fav-1.jpg' style='width:100px;height:40px;'></image>
  </view>
  <view>
    <text>第2步. 点击页面底部「添加到我的小程序」</text>
  </view>
  <view>
    <text>第3步. 微信首页下拉，快速进入小程序</text>
  </view>
  <!-- 知道了 -->
  <view class='ok-btn' hover-class='btn-hover' bindtap='okHandler'>
    <view>
      <text>我知道了</text>
    </view>
  </view>
</view>