/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container{
  padding-bottom: 120rpx;
}
.block {
  /* height: 140rpx; */
  width: 690rpx;
  margin:20rpx 30rpx 10rpx;
  background: #fff;
  box-shadow: 0px 1px 5px silver;
  border-radius: 10rpx;
}
.gg_title{
  line-height: 2em;
  padding: 0 20rpx;
  background-color:#f5f5f5;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.gg_img{
  width:690rpx;
  margin:0;
  display:block;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.buttom-text{
  line-height: 3em;
  text-align: center;
  color:#aaa;
}

.foot-button{
  position: fixed;
  left:0;
  right:0;
  bottom:0;
  height:100rpx;
  line-height: 100rpx;
  font-size: larger;
  text-align: center;
  background-color: rgb(245, 186, 39);
  color:white;
  box-shadow: 0px -1px 5px rgb(226, 169, 23);
}